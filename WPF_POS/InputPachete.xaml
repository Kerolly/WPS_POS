<Window x:Class="WPF_POS.InputPachete"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_POS"
        mc:Ignorable="d"
        Title="InputPachete" Height="450" Width="800">
    <Grid>
        <Label Content="Introdu servicii" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Width="134"/>
        <Label Content="Nume" HorizontalAlignment="Left" Margin="80,50,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="input_nume_pachet" HorizontalAlignment="Left" Margin="80,81,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="CodIntern" HorizontalAlignment="Left" Margin="229,50,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="input_codIntern_pachet" HorizontalAlignment="Left" Margin="229,81,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Categorie" HorizontalAlignment="Left" Margin="80,133,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="input_categorie_pachet" HorizontalAlignment="Left" Margin="80,159,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="but_trimite" Content="Trimite" HorizontalAlignment="Left" Margin="509,327,0,0" VerticalAlignment="Top" Height="41" Width="122" Click="but_trimite_Click"/>
        <Label Content="Cate produse? (max 2)" HorizontalAlignment="Left" Margin="80,0,0,0" VerticalAlignment="Center"/>
        <Label Content="Cate servicii? (max 3)" HorizontalAlignment="Left" Margin="289,0,0,0" VerticalAlignment="Center"/>
        <TextBox x:Name="input_nr_prod_pachet" HorizontalAlignment="Left" Margin="80,235,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" />
        <TextBox x:Name="input_nr_serv_pachet" HorizontalAlignment="Left" Margin="289,235,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
